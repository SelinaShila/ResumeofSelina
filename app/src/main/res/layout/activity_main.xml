<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#ffffff"
    android:orientation="vertical"
    

    tools:context="com.example.selinashila.resumeofselina.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradientbackground"

        >
        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:gravity="center">



            <ImageView
                android:id="@+id/propic"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/propic" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selina Akter Shila"
                android:textColor="#fff"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Developer"
                android:textColor="#fff"
                />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                >


                <Button
                    android:id="@+id/btn_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/facebook"/>


                <Button
                    android:id="@+id/btn_tweet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/tweeter"></Button>

                <Button
                    android:id="@+id/btn_linkedin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/linkedin"
                    />
                <Button
                    android:id="@+id/btn_git"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/github"

                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradientbackground">
        <TextView
            android:gravity="center"
            android:background="@color/endClr"
            android:textColor="#ffffff"
            android:text="OBJECTIVE"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="100dp"
            android:background="@color/startClr"
            android:textColor="#ffffff"
            android:text="To develop a successful career in a dynamic organization where there is an opportunity of self-assessment and self-improvement in both individual and group-based work that ultimately leads to the future developments of my career."
            />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:background="@color/endClr"
            android:onClick="onButtonClick"
            android:text="NEXT"
            android:textColor="#fff"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>


</LinearLayout>
